{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "embedded-memory:observation",
  "type": "object",
  "required": ["id", "ts", "source", "subject", "content"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "ts": { "type": "string", "minLength": 1 },
    "source": { "type": "string", "enum": ["chat", "analysis", "report", "system"] },
    "subject": {
      "type": "object",
      "required": ["model_id", "fw_version"],
      "properties": {
        "model_id": { "type": "string", "minLength": 1 },
        "fw_version": { "type": "string", "minLength": 1 },
        "instance_id": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    },
    "content": {
      "oneOf": [
        { "type": "string" },
        { "type": "object" },
        { "type": "array" }
      ]
    },
    "tags": { "type": "array", "items": { "type": "string" } },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
