{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "embedded-memory:compile_request",
  "type": "object",
  "required": ["schema_version", "request_id", "store_root", "generated_at", "policy", "observations", "observation_ids"],
  "properties": {
    "schema_version": { "type": "string", "minLength": 1 },
    "request_id": { "type": "string", "minLength": 1 },
    "store_root": { "type": "string", "minLength": 1 },
    "run_id": { "type": ["string", "null"] },
    "generated_at": { "type": "string", "minLength": 1 },
    "policy": {
      "type": "object",
      "required": ["min_confidence_profile", "min_confidence_override", "write_low_confidence_to_candidates"],
      "properties": {
        "min_confidence_profile": { "type": "number", "minimum": 0, "maximum": 1 },
        "min_confidence_override": { "type": "number", "minimum": 0, "maximum": 1 },
        "write_low_confidence_to_candidates": { "type": "boolean" },
        "facts_prefix_recommendations": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "observation_ids": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "observations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "ts", "source", "subject", "content"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "ts": { "type": "string", "minLength": 1 },
          "source": { "type": "string", "enum": ["chat", "analysis", "report", "system"] },
          "subject": {
            "type": "object",
            "required": ["model_id", "fw_version"],
            "properties": {
              "model_id": { "type": "string", "minLength": 1 },
              "fw_version": { "type": "string", "minLength": 1 },
              "instance_id": { "type": ["string", "null"] }
            },
            "additionalProperties": true
          },
          "content": {
            "oneOf": [
              { "type": "string" },
              { "type": "object" },
              { "type": "array" }
            ]
          },
          "tags": { "type": "array", "items": { "type": "string" } },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["path"],
              "properties": {
                "path": { "type": "string", "minLength": 1 },
                "sha256": { "type": "string" }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "inputs": {
      "type": "object",
      "properties": {
        "allowed_write_paths": { "type": "array", "items": { "type": "string" } },
        "forbidden_write_paths": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "note": { "type": "string" }
  },
  "additionalProperties": true
}
